{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Browser:3000",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}/views",
            "pathMappings": [
                {
                    "url": "http://localhost:3000/src",
                    "path": "${workspaceFolder}/src"
                }
            ]
        }
    ]
}